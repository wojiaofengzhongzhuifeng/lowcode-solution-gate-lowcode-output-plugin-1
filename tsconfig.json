{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "strict": false,
    "paths": {},
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist/esnext"
  },
  "exclude": ["node_modules", "lib", "es", "docs", "public", "scripts", "dist", "typings", "**/__test__", "test"]
}
